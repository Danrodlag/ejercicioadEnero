<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="main.models.Departamento" table="departamento">
        <id name="idDepartamento" type="string" length="4">
            <column name="idDepartamento" sql-type="char(4)" not-null="true"/>
            <generator class="assigned"/>
        </id>
        <property name="nombreDepartamento" type="string" length="40">
            <column name="nombreDepartamento" sql-type="varchar(40)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>